{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@prot/formly/prot-formly": [
        "libs/formly/prot-formly/src/index.ts"
      ],
      "@prot/prot-formly": ["libs/prot-formly/src/index.ts"],
      "@prot/data/service": ["libs/data/service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
